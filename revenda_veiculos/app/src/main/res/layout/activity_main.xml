<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abner.revenda_veiculos.MainActivity">

    <Button
        android:id="@+id/id_btn_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTROLE DE VEÍCULOS"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="101dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/id_btn_clientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="24dp"
        android:text="CONTROLE DE CLIENTES"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_veiculo" />

    <Button
        android:id="@+id/id_btn_compras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTROLE DE COMPRAS"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_clientes"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
